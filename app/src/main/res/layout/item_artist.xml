<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_5dp"
    android:background="?attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/dimen_2dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_artist_item"
        android:layout_width="@dimen/dimen_170"
        android:layout_height="@dimen/dimen_170"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_artist_3" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:alpha="0.4"
        android:background="@color/bg_item_album"
        android:minHeight="@dimen/dimen_60dp"></LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dimen_70dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/artist_title_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="@dimen/dimen_8dp"
            android:text="@string/artist_list"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

        <TextView
            android:id="@+id/tv_artist_number_song"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_8dp"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:paddingLeft="@dimen/dimen_8dp"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>
</RelativeLayout>