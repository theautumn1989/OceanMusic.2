<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_song"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/dimen_1dp"
    android:layout_marginRight="@dimen/dimen_1dp"
    android:layout_marginBottom="@dimen/dimen_1dp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/dimen_2dp">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/dimen_80dp"
            android:layout_height="@dimen/dimen_80dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_fragment_song" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="@dimen/dimen_10dp">

            <TextView
                android:id="@+id/tv_song_title_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@string/list_song"
                android:textColor="@color/text_color_1"
                android:textSize="@dimen/dimen_16dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/artist_name_song_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/tv_song_title_item"
                android:layout_marginTop="@dimen/dimen_4dp"
                android:maxLines="1"
                android:text="@string/artist_list"
                android:textColor="@color/text_color_2"
                android:textSize="@dimen/dimen_14dp" />
        </LinearLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>