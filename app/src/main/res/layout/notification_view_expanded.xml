<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/background_table_layout"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="@dimen/dimen_128"
        android:layout_height="@dimen/dimen_128"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/img_album_art_noti"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/ic_album_new" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/dimen_5dp">

        <TextView
            android:id="@+id/tv_song_title_noti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_15sp" />

        <TextView
            android:id="@+id/tv_artist_noti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text=""
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="@dimen/dimen_14dp"
            android:layout_marginBottom="@dimen/dimen_5dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/dimen_5dp">

            <ImageButton
                android:id="@+id/btn_prev_noti"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="@dimen/dimen_5dp"
                android:src="@drawable/ic_previuos_notification" />

            <ImageButton
                android:id="@+id/btn_play_pause_noti"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="@dimen/dimen_5dp"
                android:src="@drawable/ic_play_new" />

            <ImageButton
                android:id="@+id/btn_next_noti"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="@dimen/dimen_5dp"
                android:src="@drawable/ic_next_notificaion" />

            <ImageButton
                android:id="@+id/btn_close_noti"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:padding="@dimen/dimen_5dp"
                android:src="@drawable/ic_close_notification" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>